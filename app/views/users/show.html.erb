<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
  Number of ratings for user <%= @user.username %>: <%= @user.ratings.count %>
</p>
<p>
  Average: <%= @user.average_rating %>
<p>

<p>

<ul>
  <% @user.ratings.each do |r| %>
    <li>
      <%= r.to_s %>
      <% if @user==current_user %>
        <%= link_to 'delete', r, method: :delete, data:{confirm: 'Are you sure?'}%>
      <% end %>
    </li>
  <% end %>
</ul>

<p><strong>User's memberships</strong></p>
<ul>
  <% @user.memberships.each do |m| %>
    <li>
      <%= m.beer_club.name%>
    </li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', users_path %>
